            android:parentActivityName=".Categories" />
        <activity
            android:name=".Bolivialodge"
            android:label="Bolivia Lodge"
            android:parentActivityName=".Categories" />
        <activity
            android:name=".FusionBoutiqueHotel"
            android:label="Fusion Boutique Hotel"
            android:parentActivityName=".Categories" />
        <activity
            android:name=".ThenorthernKrugerNationalPark"
            android:label="The Northern Kruger National Park"
            android:parentActivityName=".Categories" />
        <activity
            android:name=".Thewaterberg"
